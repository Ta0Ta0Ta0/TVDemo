<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/step1_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请求网络数据"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

    <Button
        android:id="@+id/step1_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="图片加载"
        app:layout_constraintRight_toRightOf="@id/step1_1"
        app:layout_constraintStart_toEndOf="@+id/step1_1"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/step1_3finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="recycle布局实现"
        app:layout_constraintRight_toRightOf="@id/step1_2"
        app:layout_constraintStart_toEndOf="@+id/step1_2"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>